<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:gravity="center_horizontal"
    >
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/card_back"
                android:layout_width="400dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                app:srcCompat = "@drawable/lax" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/welcome_screen_orange_gradient" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="16dp"/>

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/profile_image1"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/card_pending"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#ffffff"
                android:text="TextView"
                android:gravity="center" />

            <TextView
                android:id="@+id/card_dest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="16dp"
                android:textSize="30dp"
                android:text="Title"
                android:textColor="#ffffff"
                android:textStyle="bold"/>

            <TextView
                android:textColor="#ffffff"
                android:id="@+id/card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_alignStart="@id/card_dest"
                android:text="TextView" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>