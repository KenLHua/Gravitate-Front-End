<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".forcematch2">
    <android.support.design.widget.TextInputEditText
        android:id="@+id/INPUTTEXT1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insert Ride Request ID 1"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/INPUTTEXT2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Insert Ride Request ID 2"
        android:layout_below="@+id/INPUTTEXT1"/>

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:background="@drawable/white_round_button"
        android:layout_below="@+id/INPUTTEXT2"/>

</RelativeLayout>