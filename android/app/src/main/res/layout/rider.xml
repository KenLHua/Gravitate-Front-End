<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:elevation="8dp"
        >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/rider_cover_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="#4817de"
            />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/welcome_screen_gradient_3" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/default_profile"
            />



        <TextView
            android:id="@+id/rider_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/profile_photo"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:text="FullName"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rider_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below= "@id/rider_name"
            android:layout_alignLeft="@id/rider_name"
            android:text=""
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/rider_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below= "@id/rider_email"
            android:layout_alignLeft="@id/rider_name"
            android:text="Number"
            android:textColor="#ffffff"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>
